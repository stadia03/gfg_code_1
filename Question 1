#include <stdio.h>

int main(){
    //initiation of character
    char bang[]="A string";

    //setting a pointer ptr
    char *ptr=bang;

    //letter on index 0
    printf("%c ",bang[0]);

    //pointer position
    printf("%c ",*ptr);

    //to print letter t
    printf("%c\n",bang[3]);

    //incrementing the pointer by 2
    ptr+=2;
    
    
    printf("%c ",*ptr);

    //to print letter r
    printf("%c ",ptr[2]);
   
    //to print letter g
    printf("%c",ptr[5]);
    
    
    return 0;
   
}
